<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cnguyen.braintrainer.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="w"
            android:id="@+id/button"
            android:tag="button"
            android:onClick="submitAnswer"
            android:textSize="40dp"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:id="@+id/button2"
            android:tag="button2"
            android:onClick="submitAnswer"
            android:textSize="40dp"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="y"
            android:id="@+id/button3"
            android:tag="button3"
            android:onClick="submitAnswer"
            android:textSize="40dp"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="z"
            android:id="@+id/button4"
            android:tag="button4"
            android:onClick="submitAnswer"
            android:textSize="40dp"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/incorrectTextView"
        android:tag="incorrectTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#f73f3f"
        android:textSize="30dp"
        android:layout_row="0"
        android:layout_column="15"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/correctTextView"
        android:tag="correctTextView"
        android:background="#2af30b"
        android:textSize="30dp"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:30"
        android:id="@+id/timeTextView"
        android:tag="timeTextView"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionTextView"
        android:textSize="70dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_below="@+id/timeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button5"
        android:onClick="startGame"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

</RelativeLayout>
